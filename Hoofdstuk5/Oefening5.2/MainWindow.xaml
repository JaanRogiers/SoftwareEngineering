<Window x:Class="Oefening5._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oefening5._2"
        mc:Ignorable="d"
        Title="Oefening5.2" Height="450" Width="800">
    <Grid>
        <Label Content="First Name:" HorizontalAlignment="Center" Margin="0,-70,0,0" VerticalAlignment="Center" Width="170" Height="25" VerticalContentAlignment="Center"/>
        <Label Content="Last Name:" HorizontalAlignment="Center" Margin="0,-25,0,0" VerticalAlignment="Center" Width="170" Height="25" VerticalContentAlignment="Center"/>
        <TextBox Name="firstnameTextBox" HorizontalAlignment="Center" Margin="80,-70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="100" Height="20"/>
        <TextBox Name="lastnameTextBox" HorizontalAlignment="Center" Margin="80,-25,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="100" Height="20"/>
        <Button Name="showNameButton" Content="Show" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Center" Width="100" Height="20" Click="ShowNameButton_Click"/>
    </Grid>
</Window>

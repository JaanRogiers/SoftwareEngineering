<Window x:Class="Oefening5._3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oefening5._3"
        mc:Ignorable="d"
        Title="Oefening5.3" Height="450" Width="800">
    <Grid>
        <Label Content="Salary:" HorizontalAlignment="Center" Margin="0,-70,0,0" VerticalAlignment="Center" Width="110" Height="25" VerticalContentAlignment="Center"/>
        <Label Content="Years worked:" HorizontalAlignment="Center" Margin="0,-25,0,0" VerticalAlignment="Center" Width="180" Height="25" VerticalContentAlignment="Center"/>
        <TextBox Name="salaryTextBox" HorizontalAlignment="Center" Margin="80,-70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="100" Height="20"/>
        <TextBox Name="yearsWorkedTextBox" HorizontalAlignment="Center" Margin="80,-25,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="100" Height="20"/>
        <Button Name="showButton" Content="Show" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Center" Width="100" Height="20" Click="ShowButton_Click"/>
    </Grid>
</Window>

        <TextBox Name="z2TextBox" Text="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40, 50, 0, 0" Width="100" Height=" 30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox Name="z3TextBox" Text="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40, 90, 0, 0" Width="100" Height=" 30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Canvas Name="canvas" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160, 10, 0, 0" Width="200" Height="200" Background="DarkGray"/>
    </Grid>
</Window>
